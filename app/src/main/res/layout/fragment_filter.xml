<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.FilterFragment">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Edit"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/filter_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Next"
            android:textColor="@color/blue"
            android:textSize="16sp" />


    </androidx.appcompat.widget.Toolbar>

    <com.example.socialmedia.SquareImage

        android:id="@+id/squareImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:padding="13dp"
            android:src="@drawable/filter"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.07"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Filters"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/nofilter"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Original"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter2"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter3"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter3"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter4"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter4"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter5"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter5"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <com.example.socialmedia.SquareImage
                    android:id="@+id/filter6"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Filter6"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>